<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.Cursor?>
<?import javafx.scene.effect.Blend?>
<?import javafx.scene.layout.*?>
<AnchorPane fx:id="mainPane" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity"
            prefHeight="500.0" prefWidth="700.0" style="caspian" xmlns="http://javafx.com/javafx/9"
            xmlns:fx="http://javafx.com/fxml/1" fx:controller="sample.RoutesFlightsOverviewController">
    <TabPane layoutY="25.0" prefHeight="376.0" prefWidth="600.0" tabClosingPolicy="UNAVAILABLE"
             AnchorPane.bottomAnchor="-1.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
             AnchorPane.topAnchor="25.0">
        <Tab text="Routes">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="500.0" prefWidth="750.0">
                <TableView fx:id="routesTableView" layoutX="50.0" layoutY="93.0" prefHeight="315.0" prefWidth="340.0">
                    <columns>
                        <TableColumn editable="false" prefWidth="160.0" resizable="false" sortable="false"
                                     text="Departure"/>
                        <TableColumn editable="false" prefWidth="177.0" sortable="false" text="Destination"/>
                    </columns>
                    <columnResizePolicy>
                        <TableView fx:constant="CONSTRAINED_RESIZE_POLICY"/>
                    </columnResizePolicy>
                    <cursor>
                        <Cursor fx:constant="TEXT"/>
                    </cursor>
                    <effect>
                        <Blend/>
                    </effect>
                </TableView>
                <TextField fx:id="searchRouteDeparture" alignment="TOP_CENTER" layoutX="51.0" layoutY="55.0"
                           prefHeight="25.0" prefWidth="155.0" promptText="search departure"/>
                <TextField fx:id="searchRouteArrival" alignment="TOP_CENTER" layoutX="236.0" layoutY="55.0"
                           prefHeight="25.0" prefWidth="154.0" promptText="search destination"/>
                <Button fx:id="addRouteButton" layoutX="492.0" layoutY="93.0" mnemonicParsing="false" prefHeight="25.0"
                        prefWidth="70.0" text="Add"/>
                <Button fx:id="editRouteButton" layoutX="492.0" layoutY="208.0" mnemonicParsing="false"
                        prefHeight="25.0" prefWidth="70.0" text="Edit"/>
                <Button fx:id="deleteRouteButton" layoutX="492.0" layoutY="381.0" mnemonicParsing="false"
                        prefHeight="25.0" prefWidth="70.0" text="Delete"/>
            </AnchorPane>
        </Tab>
        <Tab text="Flights">
            <AnchorPane minHeight="0.0" minWidth="0.0" prefHeight="180.0" prefWidth="200.0">
                <TableView fx:id="flightsTableView" layoutX="24.0" layoutY="24.0" prefHeight="380.0" prefWidth="380.0">
                    <columns>
                        <TableColumn editable="false" resizable="false" sortable="false" text="Number"/>
                        <TableColumn editable="false" prefWidth="150.0" resizable="false" sortable="false"
                                     text="Departure"/>
                        <TableColumn editable="false" prefWidth="147.0" resizable="false" sortable="false"
                                     text="Destination"/>
                    </columns>
                </TableView>
                <Button fx:id="addFlightButton" layoutX="520.0" layoutY="270.0" mnemonicParsing="false"
                        prefHeight="25.0" prefWidth="70.0" text="Add"/>
                <Button fx:id="editFlightButton" layoutX="520.0" layoutY="320.0" mnemonicParsing="false"
                        prefHeight="25.0" prefWidth="70.0" text="Edit"/>
                <Button fx:id="deleteFlightButton" layoutX="520.0" layoutY="370.0" mnemonicParsing="false"
                        prefHeight="25.0" prefWidth="70.0" text="Delete"/>
                <Button fx:id="searchFlightButton" layoutX="520.0" layoutY="200.0" mnemonicParsing="false"
                        prefHeight="25.0" prefWidth="70.0" text="Search"/>
                <TextArea fx:id="flightDetailsTextArea" editable="false" layoutX="418.0" layoutY="24.0"
                          prefHeight="148.0" prefWidth="274.0"/>
            </AnchorPane>
        </Tab>
    </TabPane>
    <MenuBar prefHeight="25.0" prefWidth="700.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0"
             AnchorPane.topAnchor="0.0">
        <Menu mnemonicParsing="false" text="File">
            <MenuItem mnemonicParsing="false" text="Import"/>
            <MenuItem mnemonicParsing="false" text="Export"/>
            <MenuItem mnemonicParsing="false" text="Merge"/>
        </Menu>
        <Menu mnemonicParsing="false" text="Help">
            <MenuItem mnemonicParsing="false" text="About"/>
        </Menu>
    </MenuBar>
</AnchorPane>
